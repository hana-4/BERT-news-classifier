# Environment Variables for BERT News Recommender
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to Git!

# News API Configuration
NEWS_API_KEY=your_news_api_key_here

# Weights & Biases Configuration (for monitoring)
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=bert-news-recommender

# Deployment Configuration
DEPLOYMENT_TYPE=local
PORT=8501

# Model Configuration
MODEL_PATH=./best_ft_model.pth
PRETRAINED_MODEL_PATH=./bert_model_wiki103.pth

# Application Configuration
DEBUG=False
LOG_LEVEL=INFO
